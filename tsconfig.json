{
	"compilerOptions": {
		"target": "ES5",
		"module": "commonjs",
		"moduleResolution": "node",
		"allowJs": true,
		"strict": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"importHelpers": true,
		"baseUrl": ".",
		"noImplicitAny": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declaration": true,
		"strictNullChecks": false,
		"lib": [
			"dom",
			"es5",
			"es2018"
		],
		"typeRoots": [
			"./node_modules/@types",
			"./assets/types"
		],
		"paths": {
			"@interfaces/*": ["./assets/ts/interfaces/*"],
		},
	},
	"include": [
		"assets/ts/**/*.ts"
	]
}
